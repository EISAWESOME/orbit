{
  "extends" : "standard",  
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
  },
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "sourceType": "module"
  },  
  "rules": {
     	
      "semi" : ["error", "always"],
      "no-extra-semi" : "error",

      "eqeqeq" : "off",
      "spaced-comment" : "off",

      "no-var" : "warn"
  }
}